<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_marginTop="@dimen/dim_80"
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_550"
        tools:layout_editor_absoluteY="120dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dim_80"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_550"
            tools:layout_editor_absoluteY="120dp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_80"
        android:src="@drawable/cart" />
    <TextView
        android:id="@+id/sum"
        android:text="TOTAL : "
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_670"
        android:layout_marginLeft="@dimen/dim_20"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/deli"
        android:text=" +(Delivery : 10/-)"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20"
        android:layout_marginTop="@dimen/dim_700"
        android:layout_marginLeft="@dimen/dim_12"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/noitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_150"
        android:layout_marginTop="@dimen/dim_350"
        android:text="EMPTY CART"
        android:textColor="@color/black"
        android:textSize="@dimen/dim_20">

    </TextView>

    <Button
        android:id="@+id/checkout"
        android:layout_marginTop="@dimen/dim_670"
        android:text = "CHECKOUT"
        android:layout_marginLeft="@dimen/dim_280"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </Button>

</RelativeLayout>