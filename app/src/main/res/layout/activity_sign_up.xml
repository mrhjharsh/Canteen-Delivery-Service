<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sign_up">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="55dp"
        android:src="@drawable/signuplogo"
        app:layout_constraintBottom_toTopOf="@+id/it1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/it1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="69dp"
        android:textColorHint="#020202"
        app:boxStrokeColor="#000000"
        app:hintTextColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/it2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#020202"
            app:boxStrokeColor="#000000"
            app:hintTextColor="@color/black"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="207dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/it3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="#020202"
                app:boxStrokeColor="#000000"
                app:hintTextColor="@color/black"
                tools:layout_editor_absoluteX="55dp"
                tools:layout_editor_absoluteY="207dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/it4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColorHint="#020202"
                    app:boxStrokeColor="#000000"
                    app:hintTextColor="@color/black"
                    tools:layout_editor_absoluteX="55dp"
                    tools:layout_editor_absoluteY="207dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/it5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColorHint="#020202"
                        app:boxStrokeColor="#000000"
                        app:hintTextColor="@color/black"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="207dp">

                        <EditText
                            android:id="@+id/cpassword"
                            android:layout_width="@dimen/dim_300"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/baseline_password_24"
                            android:hint="    Confirm Password"
                            android:inputType="textPassword"
                            android:textColorHighlight="#101010"
                            android:textColorLink="#000000">

                        </EditText>

                    </com.google.android.material.textfield.TextInputLayout>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="@dimen/dim_300"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/baseline_password_24"
                        android:hint="    Password"
                        android:inputType="textPassword"
                        android:textColorHighlight="#101010"
                        android:textColorLink="#000000">

                    </EditText>

                </com.google.android.material.textfield.TextInputLayout>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="@dimen/dim_300"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:hint="    Email"
                    android:textColorHighlight="#101010"
                    android:textColorLink="#000000">

                </EditText>

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/number"
                android:layout_width="@dimen/dim_300"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_123_24"
                android:hint="    Number"
                android:inputType="number"
                android:textColorHighlight="#101010"
                android:textColorLink="#000000">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/dim_300"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_person_24"
            android:hint="    Name"
            android:textColorHighlight="#101010"
            android:textColorLink="#000000">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:backgroundTint="@color/black"
        android:text="SIGN IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/it1" />

</androidx.constraintlayout.widget.ConstraintLayout>